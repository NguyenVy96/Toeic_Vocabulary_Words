<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_start_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star" />

    <ImageView
        android:id="@+id/img_start_2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/img_start_1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star" />

    <ImageView
        android:id="@+id/img_start_3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/img_start_2"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star" />

    <ImageView
        android:id="@+id/img_start_4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/img_start_3"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star" />

    <ImageView
        android:id="@+id/img_start_5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="5dp"
        android:layout_toRightOf="@id/img_start_4"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/tv_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:text="10/10"
        android:gravity="center"
        android:textColor="@color/normal_content_text_color"
        android:textSize="20dp" />

</RelativeLayout>