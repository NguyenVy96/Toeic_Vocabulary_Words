<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarColor" parent="Theme.Main">
        <!-- set toolbar icon color -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="normal_content_text_style">
        <item name="android:textColor">@color/normal_content_text_color</item>
        <item name="android:textSize">@dimen/normal_content_text_size</item>
    </style>

    <style name="bold_content_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
    </style>

    <style name="connect_words_game_item_text_style">
        <item name="android:background">@drawable/rounded_rectangle_item_20</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/normal_content_text_color</item>
        <item name="android:textSize">@dimen/connect_words_game_item_text_size</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">"Temp text"</item>
        <item name="android:elevation">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

</resources>